
<h1><%= t :listing_booking %></h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>User</th> 
      <th><%= t :start_datetime %></th>
      <th><%= t :duration %></th>
      <th><%= t :pickup %></th>
      <th><%= t :dropoff %></th>
      <th><%= t :trip_type %></th>
      <th><%= t :helper_class %></th>
      <th><%= t :total_fee %></th>
      <th><%= t :server %></th>
      <th><%= t :status %></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @bookings.each do |booking| %>
      <tr>
        <td><%= booking.user.name if booking.user %></td> 
        <td><%= booking.start_datetime.strftime("%d/%m/%y %I:%M%P")%></td>
        <td><%= booking.hours %><%= t :hours %></td>
        <td><%= booking.pickup_address %></td>
        <td><%= booking.dropoff_address %></td>
        <td><%= t booking.trip_type %></td>
        <td><%= t booking.helper_class %></td>
        <td><%= number_to_currency(booking.total_fee, precision: 0, unit: '$') %></td>
        <td><%= booking.server.name if booking.server %></td>
        <td><%= t booking.status %></td>

        <td>
            <%= link_to booking do %>
              <i class="glyphicon glyphicon-zoom-in"></i>
            <% end %>
        </td>
        <td>
            <%= link_to edit_booking_path(booking)  do %>
              <i class="glyphicon glyphicon-edit"></i>
            <% end %>
        </td>
<!--
        <td>
            <%= link_to booking, method: :delete, data: { confirm: 'Are you sure?' } do %>
              <i class="glyphicon glyphicon-trash"></i>
            <% end %>
        </td>
-->

      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to new_booking_path do %>
  <i class="glyphicon glyphicon-plus-sign"></i>
<% end %>


